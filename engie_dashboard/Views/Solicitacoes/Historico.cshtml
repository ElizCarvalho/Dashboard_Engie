@model IEnumerable<engie_dashboard.Models.HistoricoSolicitacao>

@{
    ViewData["Title"] = "Historico";
}

<h4>Historico</h4>

<table class="table table-bordered table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th>
                Data da Atualização
            </th>
            <th>
                Usuário
            </th>
            <th>
                Ação
            </th>
            <th>
                Último Status
            </th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tfoot>
            <tr>
                <td colspan="8" class="text-center">Não há registro.</td>
            </tr>
        </tfoot>
    }
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraModificacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comando)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusSolicitacao)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-3">
    <a class="btn btn-primary" style="margin-top: 11%;" asp-action="Index"> < Voltar</a>
</div>